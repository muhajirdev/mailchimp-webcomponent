
.mailchimp-popup
  position relative

  &.close
    position absolute;
    cursor pointer;
    top: 1rem;
    right 1rem;
    @media (min-width: 768px)
      padding: 1rem;
      right 3rem;
      top: 1rem;

  &.overlay
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.75);
    display: flex;
    z-index: 100;
    flex-direction: column;
    justify-content: center;
    align-items: center;


  &.wrapper
    background-color: white;
    font-family: sans-serif;
    box-sizing: border-box;
    padding: 2rem;
    border-radius: 0.25rem;
    width: 90%;

    @media (min-width: 768px)
      width: 40%;
      padding: 3rem;


  &.headline
    font-size: 2rem;
    margin: 1rem 0;


  &.subheadline
    font-size: 1rem;
    margin: 1rem 0;


  &.email
    border-radius: 0.25rem;
    border: none;
    background-color: #e3e3e3;
    padding: 0.8rem 1rem;
    font-size: 1rem;
    margin: 1rem 0;
    margin-right : 1rem;


  &.button
    border-radius: 0.25rem;
    border: none;
    background-color: #e3e3e3;
    padding: 0.8rem 1rem;
    font-size: 1rem;

